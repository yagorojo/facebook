<div class="container mx-auto">
  <div class="mt-5 mx-auto lg:w-3/5">
    <%= render @post %>

    <%= form_with model: @comment, url: post_comments_path(@post), class: "flex gap-3 container mx-auto p-4 my-3 rounded-md bg-white shadow-sm" do |form| %>
      <%= form.hidden_field :user_id, value: current_user.id %>
      <%= form.text_field :body, placeholder: "Leave a comment!", class: "w-full rounded-md border-gray-300" %>
      <%= form.submit "Comment", class: "bg-blue-500 font-bold text-white rounded-md p-2 hover:bg-blue-700" %>
    <% end %>

    <div id="comments" class="mt-5 container mx-auto p-5 bg-white shadow-sm rounded-md">
      <%= render partial: 'comments/comment', collection: @post.comments.reverse %>
    </div>
  </div>
</div>