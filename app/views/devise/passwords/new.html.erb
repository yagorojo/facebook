<main class="flex w-100 h-screen flex-col text-center items-center justify-center px-4">
  <div class="max-w-[400px]">
    <p class="text-blue-500 text-5xl font-extrabold py-4">Crotbook</p>
    <p class="text-2xl">Forgot your password? No worries, we are here to help you.</p>
  </div>

  <div class="container-sm bg-white m-8 p-4 shadow-sm rounded-md w-80">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email",  class: "border-gray-300 rounded-md w-full p-2.5" %>
      <%= f.submit "Send me instructions", class: "mx-auto w-fit bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded mt-3" %>
      <div class="h-px m-3 bg-gray-200 border-0"></div>
      <div>
        <%= link_to "Log in", new_session_path(resource_name), class: "text-sm my-2 text-blue-500 hover:text-blue-700" %><small> or</small>
        <%= link_to "Sign up", new_registration_path(resource_name), class: "text-sm my-2 text-blue-500 hover:text-blue-700" %>
      </div>
    <% end %>
  </div>


