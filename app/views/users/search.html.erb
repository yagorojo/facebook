<div class="container mx-auto">
  <div class="lg:w-3/5 mx-auto  bg-white rounded-md shadow-md mt-5">
    <div class="text-2xl font-bold p-3">People</div>
    <% @results.each do |user| %>
      <div class="flex gap-3 items-center p-3">
        <% if user.img.nil? %>
          <div class="relative w-10 h-10 overflow-hidden bg-gray-100 rounded-full dark:bg-gray-600">
            <svg class="absolute w-12 h-12 text-gray-400 -left-1" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path></svg>
          </div>
        <% else %>
          <img src=<%= user.img %> class="h-10 w-10 rounded-full">
        <% end %>
        <%= link_to "#{user.name} #{user.surname}", user_path(user.id), class: "font-bold text-lg" %>
      </div>
    <% end %>
  </div>
</div>