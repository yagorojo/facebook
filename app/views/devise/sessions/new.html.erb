<main class="flex w-100 h-screen flex-col text-center items-center justify-center px-4">
  <div class="max-w-[400px]">
    <p class="text-blue-500 text-5xl font-extrabold py-4">Crotbook</p>
    <p class="text-2xl">Connect with friends and the world around you on Crotbook.</p>
  </div>

  <div class="container-sm bg-white m-8 p-4 shadow-sm rounded-md w-80">
    <%= form_for(resource, html: { class: "flex flex-col gap-2" }, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "border-gray-300 rounded-md w-full p-2.5" %>
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "border-gray-300 rounded-md w-full p-2.5" %>
      <%= f.submit "Login", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to "Forgot password?", new_password_path(resource_name), class: "text-sm my-2 text-blue-500 hover:text-blue-700" %>
      <% end %>
      <div class="h-px mb-3 bg-gray-200 border-0"></div>
      <%= link_to "Create new account", new_registration_path(resource_name), class: "mx-auto w-fit bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded" %>
    <% end %>
  </div>

  <small><strong>Create a Page</strong> for a celebrity, brand or business.</small>
</main>